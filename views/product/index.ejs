<% include ../partials/header %>

<div class="container">
  <header class= "jumbotron mt-2">
    <div class="container">
      <h1>Welcome To Widget</h1>
      <p>Order for the product of your choice. We offer the best service.</p>
      <a class="btn btn-primary btn-large" href="/products/new">Add New Products</a>
</div>            
</header>

<div class="row text-center" style= "display: flex; flex-wrap: wrap;">                       
      <% products.forEach(function(product){ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <img class="img-thumbnail" src="<%= product.image %>">
                <div class="caption">
                    <h6><%= product.name %></h6>
                </div>
                <p><%= product.description.substring(0, 50) %></p>
                <p><%= product.category %></p>
                <p>
                    <a href="/products/<%= product._id %>" class="btn btn-primary">More Info</a>
                </p>
                </div>
        </div>
            
            <%  }) %>
    </div>
  </div>

  <% include ../partials/footer %>