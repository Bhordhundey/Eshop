  <% include ../partials/header %>

<div class="row m-5">
    <div class="col-lg-3">
        <div class="filter-container">
                <div class="card">
                    <form action="#" method="post">
                        <div class="content">
                            <p class="filter">
                                FILTER
                            </p>
                            <hr/>
                            <select class="form-control" name="" id="" >
                                <option value="">Filter By Category</option>
                                <% filteredProducts.forEach(function(filter) { %>
                                    <option value="<%= filter._id %>"><%= filter._id %></option>
                                <% }) %>
                            </select>
                            <div class="clearfix"></div>
                            <button class="btn add-apply">Apply</button>
                        </div>
                    </form>
                    </div>
        </div>
        
    </div>
    <div class="col-lg-9">
        <div class="row text-center" style= "display: flex; flex-wrap: wrap;">
            <% products.forEach(function(product){ %>
                <div class="col-md-4 col-sm-6">
                    <div class="img-thumbnail mb-5">
                        <img class="img-thumbnail" src="<%= product.image %>">
                        <div class="caption">
                            <h4><%= product.name %></h4>
                            <h6>Price: â‚¦<%= product.price %></h6>
                        </div>
                        <hr> 
                        <h6>Product Category: <%= product.category %></h6>
                        <hr>
                        <div>
                                <p><%= product.description.substring(0, 50) %></p>
                        </div>
                            <p><a href="/products/<%= product._id %>" class="btn btn-primary">View Details</a></p>
                        </div>
                </div>
                    
                    <%  }) %>
        </div>
    </div>
</div>

